{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "@unplugin-vue-cssvars/entry": ["./packages/entry/index.ts"],
      "@unplugin-vue-cssvars/core": ["./packages/core/index.ts"],
      "@unplugin-vue-cssvars/utils": ["./utils/index.ts"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "utils/**/*.ts",
    "play/**/*.ts",
    "build/**/*.ts",
  ],
  // ts 排除的文件
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
